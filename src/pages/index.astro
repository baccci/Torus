---
import Layout from '../layouts/Layout.astro'
import Torus from '../components/Torus.astro'
---

<Layout title='Torus 🍩' description='A simple 3D spinning donut 🤤'>
  <div
    class='absolute top-0 h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]'
  >
    <div
      class='w-full px-32 py-16 text-slate-200 flex flex-col gap-y-4 items-center z-[1]'
    >
      <h1 id='title'>Torus</h1>
      <Torus />
    </div>
  </div>
</Layout>
